<style>
	.info>span{background-color:#ff0;}
	.origin { width: 140px; height: 120px;}
	.large { width: 190px; height: 170px;}
	.small { width: 90px; height: 70px;}
</style>
<script src="http://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
	$(function() {
		//$('img').eq(1).width(190);
		//$('img').eq(1).height(170);
		imgClass = $('#img').attr('class');
		$(document).on("mousewheel", function(event) {
			 // event.originalEvent.wheelDelta : 마우스의 위, 아래 스크롤값을 가져온다.
			 var wheel = event.originalEvent.wheelDelta;
			 console.log(wheel);
			 $("#ptxt").empty();

			if(wheel>0){
				$('img').addClass("large");
				//$("#ptxt").append("원본 가로사이즈: "+ $('.origin').width() +"px<br>");
				//$("#ptxt").append("원본 세로사이즈: "+ $('.origin').height() +"px");
			}else{
				$('img').addClass("small");
				//$("#ptxt").append("확대 가로사이즈: "+ $('.large').width() +"px<br>");
				//$("#ptxt").append("확대 세로사이즈: "+ $('.large').height() +"px");
			}
			
			
		});
	});
</script>
